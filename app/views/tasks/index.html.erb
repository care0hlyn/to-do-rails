<h1>Tasks</h1>

<h1>Not Done:</h1>
  <% @not_done_tasks.each do |task| %>
    <form action="/tasks/<%= task.id %>" method="post">
      <a href="/tasks/<%= task.id %>"><%= task.description %></a>
      <input name="_method" type="hidden" value="patch">
      <input name="task[done]" type="hidden" value="true">
      <button>Mark done</button>
    </form>
<% end %>

<h1>Done:</h1>
  <% @done_tasks.each do |task| %>
    <a href="/tasks/<%= task.id %>"><%= task.description %></a></br>
<% end %>

<h1>New Task:</h1>

<% if @task.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/tasks" method="post">
  <label for="task_description">Description</label>
  <input id="task_description" name="task[description]" type="text">
  <input id="task_done" name ="task[done]" type="hidden" value="false">
  <button>Create Task</button>
</form>






